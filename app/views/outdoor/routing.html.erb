<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>
  function EnterBuildingFunction(building_name_val){
    window.location=("/indoor/index/"+building_name_val)
  }
</script>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<script>
var building_names = <%= raw @building_names %>;
$(function() {
  $( "#from" ).autocomplete({
    source: building_names,
    minLength: 2,
  });
  $( "#to" ).autocomplete({
    source: building_names,
    minLength: 2,
  });
});
</script>

<!-- searh box --> 
<%= form_tag outdoor_routing_path, :method => 'get', class: "form-inline" do %>
  <div class="form-group">
    <label>From:</label>
    <%= text_field_tag :from, params[:from], type: "text", class: "form-control"%>
  </div>
  <div class="form-group">
    <label>To:</label>
    <%= text_field_tag :to, params[:to], type: "text", class: "form-control"%>
  </div>
  <%= submit_tag "GO", :name => nil, class: "btn btn-primary" %>
<% end %>



<!-- instructions -->
<div class="container-fluid">
  <div class="row">
    <!-- google map -->
    <div class="col-xs-12 col-lg-7">
      <div id="map" style='height: 600px;'></div>
    </div>   
    <!-- text list -->
    <div class="col-xs-12 col-lg-5">
      <div class="col-md-11 col-md-offset-1"> 

        <div class="row">&nbsp;</div>

        <!-- from -->
        <div class="row"> 
          <div class="col-xs-1 col-xs-offset-1 col-lg-offset-0">From:</div>
          <div class="col-xs-10">
            <%= @building_from.name %>
            <% if @building_from.class == Building %>
            <button onclick="EnterBuildingFunction('<%= @building_from.code_name %>')" type="button"> 
              Enter <%=@building_from.code_name%>
            </button>
            <% end %>
          </div>
        </div>

        <!-- paths -->
        <% if @paths %>
        <% @paths.each do |path| %>
        <div class="row">
          <div class="col-xs-1 col-xs-offset-1 col-lg-offset-0"> <span class="glyphicon glyphicon-map-marker red"></span></div>
          <div class="col-xs-10"> <%= path.description %> </div>
        </div>
        <% end %>
        <% end %>

        <!-- to -->
        <div class="row">
          <div class="col-xs-1 col-xs-offset-1 col-lg-offset-0">To:</div>
          <div class="col-xs-10">
            <%= @building_to.name %>
            <% if @building_to.class == Building %>
            <button onclick="EnterBuildingFunction('<%= @building_to.code_name %>')" type="button"> 
              Enter <%=@building_to.code_name%>
            </button>
            <% end %>
          </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">&nbsp;</div>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {
    styles: [
      {
        "featureType": "poi.school",
        "elementType": "geometry.fill",
        "stylers": [
          { "weight": 5.3 },
          { "color": "#001BA7" }
        ]
      },{
        "featureType": "landscape",
        "elementType": "geometry.fill",
        "stylers": [
          { "color": "#9e503e" }
        ]
      }
    ]
    }, 
    internal: {id: 'map'}}, function(){
      polyline = []
  
      <% @locations.each do |loc| %>
        polyline[polyline.length] = {"lat": <%= loc.latitude %>, "lng": <%= loc.longitude %>}
      <% end %>

      <% if @paths %>
        handler.addPolyline(polyline); 
        handler.bounds.extend(polyline[0]);
        handler.bounds.extend(polyline[polyline.length - 1]);
      <% end %>

      markers = handler.addMarkers(<%=raw @hash.to_json %>);

      <% if @building_from && @building_to && @building_from != @building_to %>
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      <% else %>
        handler.map.centerOn(markers[<%= @centerMarker %>]);
        handler.getMap().setZoom(17);
      <% end %>
    }
  );
</script>
